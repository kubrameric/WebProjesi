@model WebProje.Models.Ilanlar

@{
    ViewData["Title"] = "Edit";
    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
           Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }

    }
}

<h1>Edit</h1>

<h4>Ilanlar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ilanID" />
            <div class="form-group">
                <label asp-for="ilanNo" class="control-label"></label>
                <input asp-for="ilanNo" class="form-control" />
                <span asp-validation-for="ilanNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hayvanId" class="control-label"></label>
                <select asp-for="hayvanId" class="form-control" asp-items="ViewBag.hayvanId"></select>
                <span asp-validation-for="hayvanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ilanTarihi" class="control-label"></label>
                <input asp-for="ilanTarihi" class="form-control" />
                <span asp-validation-for="ilanTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
