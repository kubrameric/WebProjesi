@model IEnumerable<WebProje.Models.Ilanlar>

@{
    ViewData["Title"] = "Index";
    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
           Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }

    }
}

@{
    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <p>

                <a asp-action="Create">Yeni Kayıt Oluştur</a>
            </p>
        }

    }
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ilanNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ilanTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hayvan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ilanNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ilanTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.hayvan.hayvanId)
                </td>
                @{
                    if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ilanID">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.ilanID">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.ilanID">Delete</a>
                            </td>
                        }

                    }
                }

            </tr>
        }
    </tbody>
</table>
