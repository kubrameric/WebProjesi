@model WebProje.Models.Ilanlar
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer


@{
    ViewData["Title"] = "Sil";
    if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
        }

    }
}

<h3>Bunu silmek istediğinize emin misiniz?</h3>
<div>
    <h4>@localizer["ilanlar"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ilanNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ilanNo)
        </dd>
        @*<dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.resim)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.resim)
            </dd>*@
    <dt class="col-sm-2">
        @localizer["resim"]
    </dt>
        <dd class="col-sm-10">
            <img src="@("~/ilanResimleri/"+Model.resim)" asp-append-version="true" width="250px" height="250px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ilanTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ilanTarihi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.hayvan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hayvan.hayvanId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ilanID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">İlanlara Dön</a>
    </form>
</div>
